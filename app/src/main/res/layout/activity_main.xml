<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/App_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_name"
        android:textColor="@color/yellow"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/pass_length_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_pass_length"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/App_name"
        app:layout_constraintTop_toBottomOf="@+id/App_name"
        app:layout_constraintVertical_bias="0.051"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/pass_length_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seekbar_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pass_length_text"
        app:layout_constraintTop_toBottomOf="@id/App_name"
        app:layout_constraintVertical_bias="0.051"/>

    <SeekBar
        android:id="@+id/pass_length_seekbar"
        android:layout_width="262dp"
        android:layout_height="36dp"
        android:max="20"
        android:progress="8"
        android:progressBackgroundTint="@color/lightOrange"
        android:progressTint="@color/orange"
        android:thumb="@drawable/thumb"
        app:layout_constraintStart_toStartOf="@+id/pass_length_text"
        app:layout_constraintTop_toBottomOf="@+id/pass_length_text"
        app:layout_constraintEnd_toEndOf="@id/pass_length_value"/>

    <TextView
        android:id="@+id/pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pass"
        app:layout_constraintTop_toBottomOf="@id/pass_length_seekbar"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"/>

    <TextView
        android:id="@+id/pass"
        android:textColor="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pass_text"
        app:layout_constraintTop_toBottomOf="@id/pass_length_seekbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>